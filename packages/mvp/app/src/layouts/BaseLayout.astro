---
import type { CSSProperty } from "astro/types";
import "@picocss/pico/css/pico.conditional.min.css";
import HeadMeta, { type Props as HeadMetaProps } from "@/components/HeadMeta.astro"

export type Props = {
  meta: HeadMetaProps;
  class?: string;
  style?: string | Record<CSSProperty, string>;
}

const { meta, style, class: className } = Astro.props;
---

<!DOCTYPE html>
<html lang={meta.locale ?? "en-US"}>
  <head>
    <HeadMeta {...meta} />
    <slot name="head" />
  </head>
  <body class={className} style={style}>
    <slot />
  </body>
</html>
