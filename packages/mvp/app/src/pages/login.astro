---
import Layout from "@/layouts/MainLayout.astro";

// TODO: Consider handling login requests here?
//
// export const POST: APIRoute = (ctx) => {};
---

<Layout
  meta={{
    title: "Login",
    description: "Login to MVP CRM",
  }}
  class="mx-auto max-w-md"
>
  <div class="pico">
    <h1>Login</h1>
    <form
      method="post"
      action="api/v0/auth/login"
    >
      <label>
        <span>Username</span>
        <input
          id="username"
          name="username"
          placeholder="test"
          type="text"
          required
        />
      </label>
      <label>
        <span>Password</span>
        <input
          id="password"
          name="password"
          placeholder="password"
          type="password"
          required
        />
      </label>
      <input
        type="submit"
        value="Login"
      />
    </form>
  </div>
</Layout>
