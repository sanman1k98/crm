---
import Layout from "@/layouts/MainLayout.astro";
import OpportunityCard from "@/components/OpportunityCard.astro";
import { getOrgOpportunities } from "@/lib/orgs";

const { user } = Astro.locals;

if (!user)
  return Astro.redirect("/login");

const opportunities = await getOrgOpportunities(user.primary_org);
---

<Layout
  meta={{
    title: "Opportunities",
    description: "Opportunities",
  }}
  class="container"
>
  <h1>Opportunities</h1>
  <div class="sm:flex flex-row sm:flex-wrap gap-x-4">
    {opportunities.map(opportunity => <OpportunityCard opportunity={opportunity} class="w-full md:w-64" />)}
  </div>
</Layout>
