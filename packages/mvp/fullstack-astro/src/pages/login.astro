---
import BaseLayout from "@/layouts/BaseLayout.astro";

// TODO: Consider handling login requests here?
//
// export const POST: APIRoute = (ctx) => {};
---

<BaseLayout
  meta={{
    title: "Login",
    description: "Login to MVP CRM",
  }}
>
  <main class="h-[90vh] flex flex-col justify-center items-center">
    <h1 class="pb-6 font-bold text-center text-5xl sm:text-7xl md:text-9xl">Login</h1>
    <form
      method="post"
      action="api/v0/auth/login"
      class="grid grid-cols-1 max-w-sm"
    >
      <label class="block">
        <span>Username</span>
        <input class="block"id="username" name="username" type="text" required />
      </label>
      <label class="block">
        <span>Password</span>
        <input class="block" id="password" name="password" type="password" required />
      </label>
      <button class="w-full rounded-sm bg-slate-100 p-2 mt-2 text-center">
        Login
      </button>
    </form>
  </main>
</BaseLayout>
